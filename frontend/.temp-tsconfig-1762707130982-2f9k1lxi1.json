{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "components/Testimonials.tsx",
    "components/FAQ.tsx",
    "components/PlatformFeatures.tsx",
    "components/CommunityStats.tsx",
    "components/CTASection.tsx",
    "components/TrustIndicators.tsx",
    "app/page.tsx",
    "global.d.ts",
    "components/Header.tsx",
    "components/dashboard/EnhancedStatCard.tsx",
    "components/dashboard/BetCard.tsx",
    "components/dashboard/AchievementCard.tsx",
    "components/dashboard/EmptyState.tsx",
    "components/dashboard/ProgressRing.tsx",
    "app/dashboard/page.tsx",
    "/home/admin/Desktop/dev/StreakBet/frontend/**/*.d.ts"
  ]
}